@model IEnumerable<Cake_Store.Models.Product_Detail>

@{
    ViewData["Title"] = "Danh Sách Sản Phẩm";
}

<div class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="breadcrumb__text">
                    <h2>Shop</h2>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="breadcrumb__links">
                    <a asp-controller="Home" asp-action="Index">Home</a>
                    <span>Shop</span>
                </div>
            </div>
        </div>
    </div>
</div>

<section class="shop spad">
    <div class="container">
        <div class="shop__option">
            <div class="row">
                <div class="col-lg-7 col-md-7">
                    <div class="shop__option__search">
                        <form action="#">
                            <select>
                                <option value="">Theo Tên</option>
                                <option value="">Hãng Sản Xuất</option>
                            </select>
                            <input type="text" placeholder="Search">
                            <button type="submit"><i class="fa fa-search"></i></button>
                        </form>
                    </div>
                </div>
                <div class="col-lg-5 col-md-5">
                    <div class="shop__option__right">
                        <select>
                            <option value="">Giá Tiền</option>
                            <option value="">A to Z</option>
                            <option value="">1 - 8</option>
                            <option value="">Name</option>
                        </select>
                        <a href="#"><i class="fa fa-list"></i></a>
                        <a href="#"><i class="fa fa-reorder"></i></a>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-6 col-sm-6">
                    <div class="product__item">
                        <div class="product__item__pic set-bg">
                            <img src="~/img/shop/@item.Images.Images" />
                            <div class="product__label">
                                <span>@item.Product.ProductType.Type</span>
                            </div>
                        </div>
                        <div class="product__item__text">
                            <h6><a href="#">@item.Product.ProductName</a></h6>
                            <p>@item.Size.Size</p>
                            <div class="product__item__price">@item.Product_Price.ToString("#,#")đ</div>
                            <div class="cart_add">
                                <a asp-controller="Home" asp-action="Add" asp-route-id="@item.Product.Id">Add to cart</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="shop__last__option">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <div class="shop__pagination">
                        <a href="#">1</a>
                        <a href="#">2</a>
                        <a href="#">3</a>
                        <a href="#"><span class="arrow_carrot-right"></span></a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>