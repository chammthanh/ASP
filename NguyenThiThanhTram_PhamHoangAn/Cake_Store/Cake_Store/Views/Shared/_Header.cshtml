@{ 
    string username, a;
    if (ViewBag.AccountUsername != null)
    {
        username = ViewBag.AccountUsername;
        a = "Logout";
    }
    else
        a = "Signin";
}
    <header class="header">
        <div class="header__top">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="header__top__inner">
                            <div class="header__top__left">
                                <ul>
                                    <li>
                                        USD <span class="arrow_carrot-down"></span>
                                        <ul>
                                            <li>EUR</li>
                                            <li>USD</li>
                                        </ul>
                                    </li>
                                    <li>
                                        ENG <span class="arrow_carrot-down"></span>
                                        <ul>
                                            <li>Spanish</li>
                                            <li>ENG</li>
                                        </ul>
                                    </li>
                                    <li><a asp-controller="Accounts" asp-action="@a">@a</a> <span class="arrow_carrot-down"></span></li>

                                </ul>
                            </div>
                            <div class="header__logo">
                                <a asp-controller="Home" asp-action="Index"><img src="~/img/logo.png" alt=""></a>
                            </div>
                            <div class="header__top__right">
                                <div class="header__top__right__links">
                                    @*<a href="#" class="search-switch"><img src="~/img/icon/search.png" alt=""></a>*@
                                    <a>@ViewBag.AccountUsername</a>
                                    <a asp-controller="Home" asp-action="Account"><img class="icon_user" src="~/img/icon/user.png" alt="" style="width: 27px"></a>
                                </div>
                                <div class="header__top__right__cart">
                                    <a asp-controller="Home" asp-action="Cart"><img src="~/img/icon/cart.png" alt=""> <span>0</span></a>
                                    <div class="cart__price">Cart: <span>$0.00</span></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="canvas__open"><i class="fa fa-bars"></i></div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <nav class="header__menu mobile-menu">
                        <ul>
                            <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                            <li><a asp-controller="Home" asp-action="About">About</a></li>
                            <li><a asp-controller="Home" asp-action="Shop">Shop</a></li>
                            <li>
                                <a href="#">Pages</a>
                                <ul class="dropdown">
                                    <li><a asp-controller="Home" asp-action="Single">Shop Details</a></li>
                                    <li><a asp-controller="Home" asp-action="Cart">Shoping Cart</a></li>
                                    <li><a asp-controller="Home" asp-action="Account">Account</a></li>

                                </ul>
                            </li>
                            <li><a asp-controller="Home" asp-action="Contact">Contact</a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </header>
